{% extends 'base.html.twig' %}

{% block body -%}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>{{ 'your_characters'|trans }}</h2>
                <ul class="list-group">
                    {% for character in user.characters %}
                        <li class="list-group-item">
                            <a href="{{ path('characters_show', { 'id': character.id}) }}">
                                {{ character }}
                                <span class="badge pull-right">{{ character.favoredClass }}</span>
                                <span class="badge pull-right">{{ character.race }}</span>
                                <span class="badge pull-right">Level {{ character.level }}</span>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
                <p class="mt-3">
                    <a href="{{ path('characters_new') }}" class="btn btn-block btn-primary active">{{ 'new.character'|trans }}</a>
                </p>
            </div>
            <div class="col-md-6">
                <h2>{{ 'your_parties'|trans }}</h2>
                <ul class="list-group">
                    {% for party in user.parties %}
                        <li class="list-group-item">
                            <a href="{{ path('parties_show', {'id': party.id }) }}">{{ party }}</a>
                            <span class="badge pull-right">
                                {{ 'party.characters'|transchoice(party.characters|length) }}
                            </span>
                        </li>
                    {% endfor %}
                </ul>
                <p class="mt-3"><a href="{{ path('parties_new') }}" class="btn btn-block btn-primary active">{{ 'new.party'|trans }}</a></p>
            </div>
        </div>
    </div>
{% endblock %}